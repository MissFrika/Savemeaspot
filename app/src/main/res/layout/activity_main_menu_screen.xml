<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackgroundColor"
    android:theme="@style/AppTheme"
    tools:context="sup.savemeaspot.MainMenuScreen">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/menuButtonConstraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        >

        <ImageButton
            android:id="@+id/edit_spots_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:background="@color/menuButtonColor"
            android:text="Edit Spots"
            android:textColor="@color/menuButtonTextColor"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toRightOf="@id/my_spots_button"
             />


        <ImageButton
            android:id="@+id/my_spots_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/menuButtonColor"
            android:textColor="@color/menuButtonTextColor"
            android:layout_margin="20dp"
            app:layout_alignParentTop="true"
            />

        <ImageButton
            android:id="@+id/categories_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/menuButtonColor"
            android:text="Categories"
            android:textColor="@color/menuButtonTextColor"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/my_spots_button"
            />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/menuButtonColor"
            android:text="Settings"
            android:textColor="@color/menuButtonTextColor"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toRightOf="@id/categories_button"
            app:layout_constraintTop_toBottomOf="@id/edit_spots_button"
            />


    </android.support.constraint.ConstraintLayout>
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton_save"
        android:layout_below="@+id/menuButtonConstraint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>
