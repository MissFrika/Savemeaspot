<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sup.savemeaspot.SpotCollectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/spotTitleTextView"
        android:layout_width="298dp"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/menuButtonTextColor"
        />

    <TextView
        android:id="@+id/spotDescTextView"
        android:layout_width="298dp"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/spotTitleTextView"
        />

    <TextView
        android:id="@+id/spotCatNameTextView"
        android:layout_width="297dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/menuButtonTextColor"
        android:layout_below="@id/spotDescTextView"/>

    <TextView
        android:id="@+id/spotCoordsTextView"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:textColor="@color/menuButtonTextColor"
        android:layout_below="@id/spotCatNameTextView"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
