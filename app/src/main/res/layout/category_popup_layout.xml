<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackgroundColor"
    >

    <TextView
        android:id="@+id/popup_category_top_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/menuButtonTextColor"
        android:background="@color/menuButtonColor"
        android:textSize="12pt"
        android:text="Edit Category"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        />

    <ImageButton
        android:id="@+id/popup_category_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/popup_category_top_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/menuButtonColor"
        android:padding="11dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <EditText
        android:id="@+id/popup_category_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/popup_category_name_textView"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:text="" />

    <Spinner
        android:id="@+id/popup_category_icon_spinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_category_name_editText"
        android:layout_alignStart="@+id/popup_category_name_editText"
        android:layout_below="@+id/popup_category_icon_textView"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/popup_category_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_category_name_editText"
        android:layout_alignStart="@+id/popup_category_name_editText"
        android:layout_below="@+id/popup_category_top_textView"
        android:layout_marginTop="14dp"
        android:textSize="8pt"
        android:text="Category Name" />

    <TextView
        android:id="@+id/popup_category_icon_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_category_icon_spinner"
        android:layout_alignStart="@+id/popup_category_icon_spinner"
        android:layout_below="@+id/popup_category_name_editText"
        android:layout_marginTop="23dp"
        android:textSize="8pt"
        android:text="Category Icon" />

    <ImageButton
        android:id="@+id/popup_category_save_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundbutton_save"
        android:src="@android:drawable/ic_menu_save"
        />
</RelativeLayout>